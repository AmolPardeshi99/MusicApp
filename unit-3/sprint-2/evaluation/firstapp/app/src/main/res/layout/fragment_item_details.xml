<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".ItemDetailsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="Item Details"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/Iv_detailImage"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tiktok"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="26dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Sub Title"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvDummyText"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:text="Here will be some dummy text. This is dummy text. Here will be some dummy text. This is dummy text."
        android:textSize="18dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"/>

</LinearLayout>