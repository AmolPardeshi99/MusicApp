<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MusicDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv2SongImage"
            android:layout_width="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="250dp"/>

        <TextView
            android:id="@+id/tv2TrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv2SongImage"/>

        <TextView
            android:id="@+id/tv2CollectionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv2TrackName"/>
        <TextView
            android:id="@+id/tv2ArtistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2CollectionName"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_below="@+id/tv2ArtistName">

            <ImageButton
                android:id="@+id/btnplay"
                android:layout_width="0dp"
                android:src="@drawable/ic_playbutton"
                android:layout_height="match_parent"
                android:background="#faf211"
                android:layout_margin="8dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/btnpause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#faf211"
                android:layout_margin="8dp"
                android:src="@drawable/ic_baseline_pause_24"
                android:layout_weight="1"/>
        </LinearLayout>



    </RelativeLayout>



</androidx.cardview.widget.CardView>